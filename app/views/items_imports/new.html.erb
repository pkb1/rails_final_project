<div class="container hr">
  <h1><%= t('items_imports.import_items_from_excel') %></h1>

  <p>
    <%= t('items_imports.note_only_spreadsheets') %>
  </p>

  <h3><%= t('items_imports.requirements') %></h3>
  <ul>
    <li><%= t("items_imports.here_you_could") %></li>
    <li><%= t("items_imports.that_way_your_user") %></li>
  </ul>

  <h5><%= t('items_imports.select_file') %></h5>
  <%= form_for @items_import do |f| %>
    <% if @items_import.errors.any? %>
      <%= pluralize(@items_import.errors.count, "error") %> <%= t('items_imports.errors.prevented_us') %>
      <ul>
        <% @items_import.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    <% end %>

    <%= f.file_field :file, required: true %>
    <%= f.submit t("items_imports.import_file"), class: "btn btn-primary" %>
    <%= link_to t('items_imports.download_sample_excel'), download_sample_excel_path, class: "btn btn-primary" %>
  <% end %>
</div>